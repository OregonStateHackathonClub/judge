{
	"name": "my-app",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "next dev",
		"build": "pnpm exec biome check && prisma generate --no-engine && next build",
		"fmt": "pnpm exec biome check --write --unsafe",
		"start": "next start",
		"db:generate": "dotenv -e .env.local -- npx prisma generate",
		"db:migrate": "dotenv -e .env.local -- npx prisma migrate dev",
		"db:push": "dotenv -e .env.local -- npx prisma db push",
		"db:format": "dotenv -e .env.local -- npx prisma format",
		"db:studio": "dotenv -e .env.local -- npx prisma studio"
	},
	"dependencies": {
